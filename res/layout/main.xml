<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:singleLine="false">
    
    <TextView android:id="@+id/bdaylabel" android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_width="fill_parent" />
    
    <Button 
    android:id="@+id/dchoosebutton"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/pick_date" 
    android:textSize="20dp"
    android:onClick="showDatePickerDialog" />
    
    <TableRow android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        >
    <TextView android:id="@+id/deathlabel" android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_width="wrap_content" android:text="@string/deathlabel"/>
        
    <EditText android:id="@+id/e_years" android:numeric="integer"
    android:textSize="20dp"
    android:layout_weight="1"
    android:layout_width="0dp" android:layout_height="wrap_content" />
    
    <TextView android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_width="fill_parent" android:text=" years."/>
	</TableRow>
	
    <TableRow android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        >
    
   <TextView android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_width="fill_parent" android:text="Widget text:"/>
        
   </TableRow>
   
    <TableRow android:layout_height="wrap_content"
        android:layout_width="fill_parent">
   
    <EditText android:id="@+id/part1"
    android:textSize="20dp"
    android:layout_weight="1"
    android:layout_width="0dp" android:layout_height="wrap_content" />
    </TableRow>
    
    <TableRow android:layout_height="wrap_content"
        android:layout_width="fill_parent">
    
    <TextView android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_width="fill_parent" android:text="REMAINING DAYS"/>
    
    </TableRow>
    
    <TableRow android:layout_height="wrap_content"
        android:layout_width="fill_parent">
    
    <EditText android:id="@+id/part2"
    android:textSize="20dp"
    android:layout_weight="1"
    android:layout_width="0dp" android:layout_height="wrap_content" />
	
	</TableRow>
	
	<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:text="@string/wiki"
    android:autoLink="web"
    android:layout_centerInParent="true"/>
</TableLayout>